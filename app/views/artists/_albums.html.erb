<h4>Albums</h4>

<table>
    <tr>
        <th>Title</th>
        <th>Year</th>
        <th>Condition</th>
        <th>Rating</th>
        <th colspan="4"></th>
    </tr>

    <% @artist.albums.each do |album| %>
        <tr>
            <td><%= album.title %></td>
            <td><%= album.year %></td>
            <td><%= album.condition %></td>
            <td><%= album.rating %></td>

            <td><%= link_to 'Edit', edit_artist_album_path(album) %></td>
            <td><%= link_to 'Remove', artist_album_path(album),
                        method: :delete,
                        data: {confirm: "OK to remove?"} %></td>
        </tr>
    <% end %>

</table><br>